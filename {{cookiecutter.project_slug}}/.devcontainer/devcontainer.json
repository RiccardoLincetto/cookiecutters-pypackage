{
    "name": "Python 3",
    "image": "mcr.microsoft.com/devcontainers/python:0-{{cookiecutter.min_python_version}}",
    "features": {
        "ghcr.io/devcontainers-contrib/features/poetry:2": {}
    },
    "postCreateCommand": [
        "python -m venv venv",
        "source venv/bin/activate",
        "poetry install --with=ci",
        "pre-commit install --hook-type commit-msg"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "eamodio.gitlens",
                "GitHub.copilot",
                "github.vscode-github-actions",
                "mhutchie.git-graph",
                "ms-python.flake8",
                "ms-python.isort",
                "ms-python.vscode-pylance",
                "streetsidesoftware.code-spell-checker"
            ]
        }
    }
}
